<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="configuration" type="com.android.ms8.fingerprintcontrols.data.ConfigurationObservable"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <com.android.ms8.fingerprintcontrols.views.WaterfallToolbar

                android:id="@+id/waterfall_toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:final_elevation="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/backgroundLight"
                app:layout_constraintVertical_bias="0">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_gravity="center"
                    android:background="@color/backgroundLight"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"/>

        </com.android.ms8.fingerprintcontrols.views.WaterfallToolbar>

        <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/windowBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/navigation"/>

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/waterfall_toolbar"
                app:layout_constraintBottom_toTopOf="@+id/navigation"
                android:id="@+id/frag_container">
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>
</layout>


